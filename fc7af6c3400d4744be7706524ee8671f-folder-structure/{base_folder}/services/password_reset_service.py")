# Epic Title: User Account Management

from flask import Blueprint, request, jsonify
from backend.user_account_management.services.password_reset_service import PasswordResetService

password_reset_blueprint = Blueprint('password_reset', __name__)
password_reset_service = PasswordResetService()

@password_reset_blueprint.route('/request_reset', methods=['POST'])
def request_password_reset():
    data = request.json
    email = data.get('email')
    try:
        password_reset_service.generate_password_reset_token(email)
        return jsonify({'message': 'Password reset email sent successfully'}), 200
    except ValueError as e:
        return jsonify({'error': str(e)}), 400

@password_reset_blueprint.route('/reset_password/<token>', methods=['POST'])
def reset_password(token):
    data = request.json
    new_password = data.get('new_password')
    try:
        password_reset_service.reset_password(token, new_password)
        return jsonify({'message': 'Password reset successfully'}), 200
    except ValueError as e:
        return jsonify({'error': str(e)}), 400


memory_ledger["emitted_file_paths"].append(f"{base_folder}/controllers/password_reset_controller.py")
memory_ledger["folder_file_mapping"][f"{base_folder}/controllers/"].append("password_reset_controller.py")

