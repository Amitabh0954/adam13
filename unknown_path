# Epic Title: Product Catalog Management System

from sqlalchemy import Column, Integer, String, Float
from sqlalchemy.ext.declarative import declarative_base

Base = declarative_base()

class Product(Base):
    __tablename__ = "products"

    id = Column(Integer, primary_key=True)
    name = Column(String(255), unique=True, nullable=False)
    price = Column(Float, nullable=False)
    description = Column(String(255), nullable=False)

    def __repr__(self) -> str:
        return f"<Product(name={self.name}, price={self.price})>"


memory_ledger["emitted_file_paths"].append("backend/product_catalog_management/models/product.py")
memory_ledger["declared_entities"].append("Product")
memory_ledger["folder_file_mapping"]["backend/product_catalog_management/models/"] = ["product.py"]

