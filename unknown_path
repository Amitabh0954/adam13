# Epic Title: Product Catalog Management

from backend.product_catalog_management.repositories.product_repository import ProductRepository
from backend.product_catalog_management.models.product import Product

class ProductService:
    def __init__(self, product_repository: ProductRepository = ProductRepository()):
        self.product_repository = product_repository

    def validate_product(self, name: str, price: float, description: str) -> bool:
        if not name:
            raise ValueError("Product name cannot be empty")
        if price <= 0:
            raise ValueError("Product price must be a positive number")
        if not description:
            raise ValueError("Product description cannot be empty")
        return True

    def add_new_product(self, name: str, price: float, description: str) -> Product:
        if not self.validate_product(name, price, description):
            raise ValueError("Invalid product data")

        if self.product_repository.get_product_by_name(name):
            raise ValueError("Product name must be unique")

        new_product = Product(name=name, price=price, description=description)
        self.product_repository.add_product(new_product)
        return new_product

    def update_product(self, product_id: int, name: str, price: float, description: str) -> Product:
        product = self.product_repository.session.query(Product).get(product_id)
        if not product:
            raise ValueError("Product not found")

        if not self.validate_product(name, price, description):
            raise ValueError("Invalid product data")
        
        product.name = name
        product.price = price
        product.description = description
        self.product_repository.session.commit()
        return product

    def delete_product(self, product_id: int):
        product = self.product_repository.session.query(Product).get(product_id)
        if not product:
            raise ValueError("Product not found")
        
        self.product_repository.session.delete(product)
        self.product_repository.session.commit()


memory_ledger["emitted_file_paths"].append("backend/product_catalog_management/services/product_service.py")
memory_ledger["folder_file_mapping"]["backend/product_catalog_management/services/"] = ["product_service.py"]

