# Epic Title: Product Catalog Management System

from backend.product_catalog_management.repositories.product_repository import ProductRepository
from backend.product_catalog_management.models.product import Product

class ProductUpdateService:
    def __init__(self, product_repository: ProductRepository):
        self.product_repository = product_repository

    def update_product(self, product_id: int, name: str = None, price: float = None, description: str = None) -> Product:
        product = self.product_repository.session.query(Product).filter_by(id=product_id).first()
        if not product:
            raise ValueError("Product not found")

        if name:
            product.name = name
        if price is not None:
            if price <= 0:
                raise ValueError("Price must be a positive number")
            product.price = price
        if description:
            product.description = description

        self.product_repository.session.commit()
        return product


memory_ledger["emitted_file_paths"].append("backend/product_catalog_management/services/product_update_service.py")
memory_ledger["public_interfaces"].append("ProductUpdateService")
memory_ledger["folder_file_mapping"]["backend/product_catalog_management/services/"].append("product_update_service.py")

