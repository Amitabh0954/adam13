# Epic Title: Shopping Cart Functionality

from sqlalchemy import Column, Integer, ForeignKey
from sqlalchemy.orm import relationship
from sqlalchemy.ext.declarative import declarative_base

Base = declarative_base()

class CartItem(Base):
    __tablename__ = "cart_items"

    id = Column(Integer, primary_key=True)
    cart_id = Column(Integer, ForeignKey("shopping_carts.id"), nullable=False)
    product_id = Column(Integer, nullable=False)

    def __repr__(self) -> str:
        return f"<CartItem(cart_id={self.cart_id}, product_id={self.product_id})>"


memory_ledger["emitted_file_paths"].append("backend/shopping_cart/models/cart_item.py")
memory_ledger["declared_entities"].append("CartItem")
memory_ledger["folder_file_mapping"]["backend/shopping_cart/models/"] = ["cart_item.py"]

