# Epic Title: Product Catalog Management System

from sqlalchemy.orm import Session
from sqlalchemy.orm import query_expression
from sqlalchemy.sql import or_
from backend.product_catalog_management.models.product import Product

class ProductSearchService:
    def __init__(self, session: Session):
        self.session = session

    def search_products(self, term: str, page: int, per_page: int):
        query = self.session.query(Product).filter(
            or_(
                Product.name.like(f"%{term}%"),
                Product.description.like(f"%{term}%")
            )
        )
        total_results = query.count()
        results = query.offset((page - 1) * per_page).limit(per_page).all()
        return {"results": results, "total": total_results}


memory_ledger["emitted_file_paths"].append("backend/product_catalog_management/services/product_search_service.py")
memory_ledger["public_interfaces"].append("ProductSearchService")
memory_ledger["folder_file_mapping"]["backend/product_catalog_management/services/"].append("product_search_service.py")

