# Epic Title: User Account Management

from flask import Blueprint, request, jsonify
from backend.user_account_management.services.user_service import UserService
from backend.user_account_management.services.password_reset_service import PasswordResetService
from backend.user_account_management.services.user_profile_service import UserProfileService

user_blueprint = Blueprint('user', __name__)
user_service = UserService()
password_reset_service = PasswordResetService()
user_profile_service = UserProfileService()

@user_blueprint.route('/register', methods=['POST'])
def register():
    data = request.json
    email = data.get('email')
    password = data.get('password')
    
    try:
        user = user_service.register_user(email, password)
        return jsonify({'message': 'User registered successfully', 'user': user.email}), 201
    except ValueError as e:
        return jsonify({'error': str(e)}), 400

@user_blueprint.route('/login', methods=['POST'])
def login():
    data = request.json
    email = data.get('email')
    password = data.get('password')
    
    try:
        user = user_service.login_user(email, password)
        return jsonify({'message': 'Login successful', 'user': user.email}), 200
    except ValueError as e:
        return jsonify({'error': str(e)}), 400

@user_blueprint.route('/request-password-reset', methods=['POST'])
def request_password_reset():
    email = request.json.get('email')

    try:
        token = password_reset_service.generate_reset_token(email)
        # Here you would normally send the token via email
        return jsonify({'message': 'Password reset token generated', 'token': token}), 200
    except ValueError as e:
        return jsonify({'error': str(e)}), 400

@user_blueprint.route('/reset-password', methods=['POST'])
def reset_password():
    data = request.json
    token = data.get('token')
    new_password = data.get('new_password')

    try:
        password_reset_service.reset_password(token, new_password)
        return jsonify({'message': 'Password reset successfully'}), 200
    except ValueError as e:
        return jsonify({'error': str(e)}), 400

@user_blueprint.route('/update-profile/<int:user_id>', methods=['PUT'])
def update_profile(user_id):
    data = request.json
    try:
        user = user_profile_service.update_user_profile(user_id, **data)
        return jsonify({'message': 'Profile updated successfully', 'user': user.email}), 200
    except ValueError as e:
        return jsonify({'error': str(e)}), 400


