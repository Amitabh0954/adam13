# Epic Title: Shopping Cart Functionality

from sqlalchemy.orm import Session
from backend.shopping_cart_functionality.models.cart_item import CartItem, Session as db_session

class CartItemRepository:
    def __init__(self, session: Session = db_session()):
        self.session = session
    
    def add_cart_item(self, cart_item: CartItem):
        self.session.add(cart_item)
        self.session.commit()
    
    def get_cart_item(self, cart_id: int, product_id: int) -> CartItem:
        return self.session.query(CartItem).filter_by(cart_id=cart_id, product_id=product_id).first()
    
    def update_cart_item(self, cart_item: CartItem):
        self.session.commit()

    def delete_cart_item(self, cart_item: CartItem):
        self.session.delete(cart_item)
        self.session.commit()


