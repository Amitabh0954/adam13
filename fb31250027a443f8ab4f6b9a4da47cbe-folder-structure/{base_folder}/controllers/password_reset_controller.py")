# Epic Title: User Account Management

from sqlalchemy import Column, Integer, String, ForeignKey, DateTime
from sqlalchemy.orm import relationship
from datetime import datetime, timedelta
from .user import Base, User

class PasswordResetToken(Base):
    __tablename__ = 'password_reset_tokens'

    id = Column(Integer, primary_key=True, autoincrement=True)
    user_id = Column(Integer, ForeignKey('users.id'), nullable=False)
    token = Column(String(255), unique=True, nullable=False)
    expires_at = Column(DateTime, nullable=False, default=datetime.utcnow() + timedelta(hours=24))

    user = relationship('User', back_populates='password_reset_tokens')

    def __repr__(self):
        return f"<PasswordResetToken(user_id={self.user_id}, token={self.token})>"


memory_ledger["emitted_file_paths"].append(f"{base_folder}/models/password_reset_token.py")
memory_ledger["folder_file_mapping"][f"{base_folder}/models/"].append("password_reset_token.py")

