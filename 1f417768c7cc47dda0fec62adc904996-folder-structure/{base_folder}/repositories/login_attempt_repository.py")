# Epic Title: User Account Management

from backend.user_account_management.repositories.user_repository import UserRepository
from backend.user_account_management.repositories.login_attempt_repository import LoginAttemptRepository
from backend.user_account_management.models.user import User
from backend.user_account_management.models.login_attempt import LoginAttempt
from werkzeug.security import generate_password_hash, check_password_hash

class UserService:
    def __init__(self, user_repository: UserRepository = UserRepository(), login_attempt_repository: LoginAttemptRepository = LoginAttemptRepository()):
        self.user_repository = user_repository
        self.login_attempt_repository = login_attempt_repository

    def register_user(self, email: str, password: str):
        if not email or not password:
            raise ValueError("Email or password cannot be empty")

        if self.user_repository.user_exists(email):
            raise ValueError("Email already in use")

        if len(password) < 8:
            raise ValueError("Password must be at least 8 characters long")

        password_hash = generate_password_hash(password)
        user = User(email=email, password_hash=password_hash)
        self.user_repository.add_user(user)

    def login_user(self, email: str, password: str) -> int:
        user = self.user_repository.get_user_by_email(email)
        if not user or not check_password_hash(user.password_hash, password):
            self.login_attempt_repository.add_login_attempt(LoginAttempt(user_id=user.id))
            raise ValueError("Invalid email or password")

        # Check for excessive login attempts
        recent_attempts = self.login_attempt_repository.get_recent_attempts(user.id)
        if len(recent_attempts) > 5:
            raise ValueError("Too many failed login attempts. Please try again later.")

        return user.id


memory_ledger["emitted_file_paths"].append(f"{base_folder}/services/user_service.py")
memory_ledger["folder_file_mapping"][f"{base_folder}/services/"].append("user_service.py")

